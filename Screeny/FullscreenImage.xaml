<Window x:Class="Screeny.FullscreenImage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Screeny"
        mc:Ignorable="d"
        Title="FullscreenImage"
        WindowState="Maximized"
        WindowStyle="None"
        KeyDown="Window_KeyDown">
    <Canvas x:Name="surface"
        MouseLeftButtonDown="surface_MouseLeftButtonDown"
        MouseLeftButtonUp="surface_MouseLeftButtonUp"
        MouseMove="surface_MouseMove">
        <Canvas.Background>
            <ImageBrush x:Name="image"></ImageBrush>
        </Canvas.Background>
    </Canvas>
</Window>
